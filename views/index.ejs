<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Airtable Cards</title>
<!-- 		<link rel="stylesheet" href="/css/base.css">
		<link rel="stylesheet" href="/css/index.css">
		<link rel="stylesheet" href="/css/home.css"> -->
	</head>
	<body>
    <div>
      <h3> New Token</h3>
      <a href="redirect-testing">Click to authorize and create a new access token</a>
      <br/>
      <%= latestRequestStateDisplayData %>
      <div>
        records: <%= cardData?.records?.length %>
      </div>
      <div>
        <% for (const record of cardData?.records) { %>
            <h3><%= record?.id %></h3>
            <h3><%= record?.fields?.Name %></h3>
            <img src="<%= record?.fields?.Attachments?.at(0)?.thumbnails?.large?.url %>" />
            <h3><%= record?.fields?.Notes %></h3>
        <% } %>
      </div>
    </div>
	</body>
</html>